<% !current_user?(micropost.user) %>
    <span class="bookmark">
        <% if micropost.bookmark(current_user) %>
            <%= form_for(micropost.bookmarks.find_by(user_id: current_user.id), method: :delete, remote: true) do |f| %>
            <%= hidden_field_tag :micropost_id, micropost.id % >
            <%= f.submit "bookmark", class: "btn btn-primary" %> 
            <% end %>
        <% end %>
        <% else %>
            <%= form_for(micropost.bookmarks.build, remote: true) do |f| %>
            <%= hidden_field_tag :micropost_id, micropost.id % >
            <%= f.submit "bookmark", class: "btn btn-primary" %> 
            <% end %>
        <% end %>
        <% end %>
    </span>
    <% end %>